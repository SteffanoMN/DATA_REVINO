<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bglogin"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:id="@+id/rv_layout_list"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:padding="14dp"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/img_list"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/profile_name_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list" />

        <TextView
            android:id="@+id/profile_phone_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="number"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list"
            android:layout_below="@id/profile_name_list"/>

        <TextView
            android:id="@+id/profile_id_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list"
            android:layout_below="@id/profile_phone_list"/>

        <TextView
            android:id="@+id/profile_time_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list"
            android:layout_below="@id/profile_id_list"/>

        <TextView
            android:id="@+id/profile_order_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list"
            android:layout_below="@id/profile_time_list"/>

        <TextView
            android:id="@+id/profile_payment_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textColor="@color/white"
            android:layout_toRightOf="@id/img_list"
            android:layout_toEndOf="@id/img_list"
            android:layout_below="@id/profile_order_list"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>